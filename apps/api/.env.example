# .env.example for apps/api
# For local emulator use, set FIRESTORE_EMULATOR_HOST to point to the emulator host
# Example: FIRESTORE_EMULATOR_HOST=localhost:8080

# Base64-encoded GCP service account JSON (use in CI / production). DO NOT commit real creds.
FIREBASE_SERVICE_ACCOUNT=

# Choose adapter: 'inmemory' or 'firestore'
API_ADAPTER=firestore

# Optional: if using emulator, set this
FIRESTORE_EMULATOR_HOST=localhost:8080
