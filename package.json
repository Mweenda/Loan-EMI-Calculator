{
  "name": "loan-emi-calculator-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "dev": "npm --prefix ./apps/web run dev",
    "dev:emulators": "firebase emulators:start --only firestore --project=lemic-app",
    "dev:web": "pnpm --filter @lemic/web run dev",
    "dev:all": "concurrently -k \"pnpm run dev:emulators\" \"pnpm run dev:web\"",
    "build": "npm --prefix ./apps/web run build",
    "test": "npm --prefix ./packages/shared test",
    "test:coverage": "npm --prefix ./packages/shared run test:coverage",
    "e2e": "npm --prefix ./apps/web run e2e",
    "lint": "npm --prefix ./apps/web run lint 2>/dev/null || true && npm --prefix ./packages/shared run lint 2>/dev/null || true",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" 2>/dev/null || true",
    "typecheck": "npm --prefix ./apps/web run typecheck 2>/dev/null || true && npm --prefix ./packages/shared run typecheck 2>/dev/null || true",
    "audit": "npm audit --audit-level=high 2>/dev/null || true",
    "prepare": "husky install 2>/dev/null || true"
  },
  "devDependencies": {
    "turbo": "latest",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "concurrently": "^8.0.0"
  }
}
