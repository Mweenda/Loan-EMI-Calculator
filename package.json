{
  "name": "loan-emi-calculator-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "dev": "pnpm --filter ./apps/web dev",
    "build": "pnpm --filter ./apps/web build",
    "test": "pnpm test --filter ./packages/shared",
    "test:coverage": "pnpm test --coverage --filter ./packages/shared",
    "e2e": "pnpm e2e --filter ./apps/web",
    "lint": "pnpm lint --filter ./apps/web && pnpm lint --filter ./packages/shared",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm typecheck --filter ./apps/web && pnpm typecheck --filter ./packages/shared",
    "audit": "pnpm audit --audit-level=high",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "latest",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0"
  }
}
